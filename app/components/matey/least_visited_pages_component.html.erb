<div class="card bg-primary text-light">
    <div class="card-header">
      <h5>Least Visited Endpoints Since <%= time_ago_in_words(@time_window.ago).titleize %> Ago (<%= @time_window.ago.strftime("%m/%d/%Y") %>) </h5>
      <% if @filter_value && @filter_property && @verified_props %>
        <p>Filtered by <%= @filter_property %> = <%= @filter_value %></p>
      <% end %>
    </div>
    <div class="card-body">
      <table class="table table-hover table-borderless table-sm">
        <thead class="table-dark">
          <tr>
            <th class="text-start">Endpoint</th>
            <th class="text-end">Count</th>
          </tr>
        </thead>
        <tbody class="text-light">
          <% @events.each do |action, count| %>
            <tr>
              <td><%= action %></td>
              <td class="text-end"><%= count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- .card-body -->
</div><!-- .card -->
