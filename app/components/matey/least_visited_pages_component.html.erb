<div class="card bg-primary text-light">
    <div class="card-header">
      <h5>Least Visited Pages Since <%= time_ago_in_words(@time_window.ago).titleize %> Ago (<%= @time_window.ago.strftime("%m/%d/%Y") %>) </h5>
    </div>
    <div class="card-body">
      <table class="table table-hover table-borderless table-sm">
        <thead class="table-dark">
          <tr>
            <th>Page</th>
            <th>Count</th>
          </tr>
        </thead>
        <tbody class="text-light">
          <% @events.each do |action, count| %>
            <tr>
              <td><%= action %></td>
              <td class="text-end"><%= count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div><!-- .card-body -->
</div><!-- .card -->
